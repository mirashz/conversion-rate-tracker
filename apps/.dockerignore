# Ignore node_modules (backend and frontend can install their own dependencies inside the container)
node_modules
frontend/node_modules
backend/node_modules

# Ignore logs
*.log

# Ignore environment files (can be added to `.env` later, but shouldn't be in Docker image)
*.env
*.env.sample
*.env.local
*.env.*.local

# Ignore build directories
frontend/build
backend/build

# Ignore Dockerfiles (if you don't want Dockerfiles in the image, although this is uncommon)
Dockerfile
docker-compose.yml

# Ignore git related files
.git
.gitignore

# Ignore editor and IDE settings
.vscode
.idea

# Ignore test and coverage files
coverage
test
tests
*.test.js
*.spec.js

# Ignore other system-related files (macOS example)
.DS_Store
Thumbs.db

